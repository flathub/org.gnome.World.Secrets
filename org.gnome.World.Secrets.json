{
    "id": "org.gnome.World.Secrets",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "secrets",
    "finish-args": [
        "--device=all",
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=pcsc",
        "--socket=wayland",
        "--system-talk-name=net.reactivated.Fprint"
    ],
    "cleanup": [
        "*.a",
        "*.la",
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/man",
        "/share/aclocal",
        "/share/gtk-doc",
        "/share/man",
        "/share/doc",
        "/share/pkgconfig"
    ],
    "modules": [
        "python3-pykeepass.json",
        "python3-validators.json",
        "python3-zxcvbn-rs-py.json",
        "python3-python-yubico.json",
        "python3-pykcs11.json",
        "python3-pyhibp.json",
        {
            "name": "secrets",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/World/secrets/-/releases/12.2/downloads/secrets-12.2.tar.xz",
                    "sha256": "096e0e2fcccdf1f4141af26575c1e87bba7d8983bc0c9f1631fe11b4e7e5ade3",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://gitlab.gnome.org/api/v4/projects/4356/releases/",
                        "version-query": ".[0].tag_name",
                        "url-query": ".[0].assets.links.[] | select(.name == \"secrets-\" + $version + \".tar.xz\") | .direct_asset_url"
                    }
                }
            ]
        }
    ]
}
